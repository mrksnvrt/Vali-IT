<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="21.04.2021" author="Marek Siinvert">
        <createTable tableName="transaction_history">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="from_account" type="text"/>
            <column name="to_account" type="text"/>
            <column name="date_time" type="timestamp"/>
            <column name="transfer_amount" type="numeric"/>
            <column name="transfer_type" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="21.04.2021 add employee" author="Marek Siinvert">
        <createTable tableName="account">
<!--            <column name="id" type="int" autoIncrement="true">-->
<!--                <constraints primaryKey="true"/>-->
<!--            </column>-->
            <column name="account_number" type="text">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="text"/>
            <column name="last_name" type="text"/>
            <column name="pin" type="text"/>
            <column name="balance" type="numeric"/>
            <column name="block" type="boolean"/>
        </createTable>
    </changeSet>
    <changeSet id="22.04.2021 add employee" author="Marek Siinvert">
        <createTable tableName="employee">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="text"/>
            <column name="last_name" type="text"/>
            <column name="birth_year" type="numeric"/>
            <column name="job_title" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="29.04.2021 username and password" author="Marek Siinvert">
        <createTable tableName="users">
            <column name ="username" type="text">
                <constraints primaryKey="true"/>
            </column>
            <column name ="password" type="text"></column>
        </createTable>
    </changeSet>

</databaseChangeLog>
